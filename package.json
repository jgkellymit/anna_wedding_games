{
  "name": "wedding-field-day-game",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "description": "A mobile-first web app for a wedding field day event, including a login page, info tab, and an interactive \"assassins\" word game.",
  "main": "index.js",
  "scripts": {
    "test": "cd server && npm test",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "build": "cd client && npm run build",
    "start": "cd server && node index.js",
    "heroku-postbuild": "npm run build"
  },
  "engines": {
    "node": ">=14.x",
    "npm": ">=6.x"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  }
}
